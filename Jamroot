import feature ;
import toolset ;
import generate ;
import errors ;
import assert ;

feature.feature root-url : : free ;
feature.feature symbolic-ref : : free ;

toolset.flags get ROOT_URL <root-url> ;
toolset.flags get SYMBOLIC_REF <symbolic-ref> ;

